.container {
  position: relative;
  width: 100%;
}

.entry-button-wrap {
  position: absolute;
  bottom: 100pt;
}

.entry-button {
  width: 100pt !important;
  background: #292a38 !important;
  border-top: 1px solid #4d4d5f !important;
  border-left: 1px solid #4d4d5f !important;
  border-right: 1px solid #292a38 !important;
  border-bottom: 1px solid #292a38 !important;
  box-shadow: -2px -3px 8px 0px #41415a, 5px 4px 6px 0px #060505;
  border-radius: 5pt !important;
  color: aliceblue !important;
}

.gravity-info {
  color: honeydew;
}

.ball-first {
  z-index: 100;
  width: 50pt;
